---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Parallax from "../components/Parallax.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

import { getCollection } from "astro:content";
import { getPostDate } from "../utils/getPostDate";
import type { IPostItem } from "../utils/IPostItem";
import { getPostLink } from "../utils/getPostLink";

const allPostsItems = (await getCollection("posts")).sort((a, b) => {
  return +getPostDate(b) - +getPostDate(a);
});
const posts = allPostsItems.slice(0, 6);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <link
      rel="preload"
      href="/assets/cloud-img/sprite.jpg"
      as="image"
      type="image/jpeg"
    />
  </head>
  <body>
    <Header />

    <section class="flex items-center justify-center py-20 px-6 bg-gray-100">
      <div class="container mx-auto flex flex-col md:flex-row items-center">
        <!-- Text Section -->
        <div class="md:w-2/3 text-center md:text-left">
          <h1 class="text-4xl font-semibold text-gray-900 mb-4">
            Hi, I’m Stan – Full-Stack Developer
          </h1>
          <p class="text-lg text-gray-700 mb-6">
            With over 20 years of experience in building apps and software, I’ve
            worked in corporate fintech and startups, scaling products from zero
            to one hundred thousand active users. I create innovative solutions
            for mobile, web, backend, and hardware integration. My
            problem-solving focuses on practical, business-driven solutions.
            Let’s build something great together.
          </p>
          <!-- 
					<a
						href="#contact"
						class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg text-lg font-medium hover:bg-blue-700 transition duration-300"
					>
						Let's Connect
					</a> 
					-->
        </div>

        <!-- Image Section -->
        <div class="md:w-1/3 mt-10 md:mt-0 text-center">
          <img
            src="/assets/bio-photo.jpg"
            alt="Stan Kondrat"
            class="rounded-full shadow-lg max-w-xs mx-auto md:mx-0"
          />
        </div>
      </div>
    </section>

    <section class="my-30 relative bg-white px-4">
      <div class="container mx-auto">
        <div class="mx-auto w-full px-4 text-center lg:w-6/12">
          <p
            class="block antialiased font-sans text-xl leading-relaxed text-inherit font-semibold"
          >
            Co-Working
          </p><h2
            class="block antialiased tracking-normal font-sans text-4xl font-semibold leading-[1.3] text-gray-900 my-3"
          >
            Build something
          </h2><p
            class="block antialiased font-sans text-xl font-normal leading-relaxed text-gray-500"
          >
            Collaborate and create something impactful.
          </p>
        </div>

        <div
          class="mx-auto mt-20 grid max-w-5xl grid-cols-1 gap-16 md:grid-cols-2 lg:grid-cols-3"
        >
          <div
            class="relative flex flex-col bg-clip-border rounded-xl bg-transparent shadow-none text-center text-gray-900"
          >
            <div
              class="mx-auto mb-6 grid h-14 w-14 place-items-center rounded-full bg-gray-900 shadow-lg shadow-gray-500/20"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
                class="w-5 h-5 text-white"
                ><path
                  fill-rule="evenodd"
                  d="M7.5 5.25a3 3 0 013-3h3a3 3 0 013 3v.205c.933.085 1.857.197 2.774.334 1.454.218 2.476 1.483 2.476 2.917v3.033c0 1.211-.734 2.352-1.936 2.752A24.726 24.726 0 0112 15.75c-2.73 0-5.357-.442-7.814-1.259-1.202-.4-1.936-1.541-1.936-2.752V8.706c0-1.434 1.022-2.7 2.476-2.917A48.814 48.814 0 017.5 5.455V5.25zm7.5 0v.09a49.488 49.488 0 00-6 0v-.09a1.5 1.5 0 011.5-1.5h3a1.5 1.5 0 011.5 1.5zm-3 8.25a.75.75 0 100-1.5.75.75 0 000 1.5z"
                  clip-rule="evenodd"></path><path
                  d="M3 18.4v-2.796a4.3 4.3 0 00.713.31A26.226 26.226 0 0012 17.25c2.892 0 5.68-.468 8.287-1.335.252-.084.49-.189.713-.311V18.4c0 1.452-1.047 2.728-2.523 2.923-2.12.282-4.282.427-6.477.427a49.19 49.19 0 01-6.477-.427C4.047 21.128 3 19.852 3 18.4z"
                ></path></svg
              >
            </div><h5
              class="block antialiased tracking-normal font-sans text-xl font-semibold leading-snug text-gray-900 mb-2"
            >
              Excelent Services
            </h5><p
              class="block antialiased font-sans text-base leading-relaxed font-normal text-gray-500"
            >
              Explore a range of top-tier services designed to meet your needs
              and exceed expectations.
            </p>
          </div><div
            class="relative flex flex-col bg-clip-border rounded-xl bg-transparent shadow-none text-center text-gray-900"
          >
            <div
              class="mx-auto mb-6 grid h-14 w-14 place-items-center rounded-full bg-gray-900 shadow-lg shadow-gray-500/20"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
                class="w-5 h-5 text-white"
                ><path
                  d="M18.375 2.25c-1.035 0-1.875.84-1.875 1.875v15.75c0 1.035.84 1.875 1.875 1.875h.75c1.035 0 1.875-.84 1.875-1.875V4.125c0-1.036-.84-1.875-1.875-1.875h-.75zM9.75 8.625c0-1.036.84-1.875 1.875-1.875h.75c1.036 0 1.875.84 1.875 1.875v11.25c0 1.035-.84 1.875-1.875 1.875h-.75a1.875 1.875 0 01-1.875-1.875V8.625zM3 13.125c0-1.036.84-1.875 1.875-1.875h.75c1.036 0 1.875.84 1.875 1.875v6.75c0 1.035-.84 1.875-1.875 1.875h-.75A1.875 1.875 0 013 19.875v-6.75z"
                ></path></svg
              >
            </div><h5
              class="block antialiased tracking-normal font-sans text-xl font-semibold leading-snug text-gray-900 mb-2"
            >
              Grow Your Market
            </h5><p
              class="block antialiased font-sans text-base leading-relaxed font-normal text-gray-500"
            >
              Expand your reach and engage new audiences with innovative
              strategies.
            </p>
          </div><div
            class="relative flex flex-col bg-clip-border rounded-xl bg-transparent shadow-none text-center text-gray-900"
          >
            <div
              class="mx-auto mb-6 grid h-14 w-14 place-items-center rounded-full bg-gray-900 shadow-lg shadow-gray-500/20"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
                class="w-5 h-5 text-white"
                ><path
                  fill-rule="evenodd"
                  d="M4.5 5.653c0-1.426 1.529-2.33 2.779-1.643l11.54 6.348c1.295.712 1.295 2.573 0 3.285L7.28 19.991c-1.25.687-2.779-.217-2.779-1.643V5.653z"
                  clip-rule="evenodd"></path></svg
              >
            </div><h5
              class="block antialiased tracking-normal font-sans text-xl font-semibold leading-snug text-gray-900 mb-2"
            >
              Launch Time
            </h5><p
              class="block antialiased font-sans text-base leading-relaxed font-normal text-gray-500"
            >
              Get ready for success – we’ll help you bring your ideas to life,
              on time and on target.
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class="my-10 px-5 container mx-auto">
      <div class="mx-auto w-full px-4 mb-6 text-center lg:w-6/12">
        <p
          class="block antialiased font-sans text-xl leading-relaxed text-inherit font-semibold"
        >
          Recent Thoughts
        </p><h2
          class="block antialiased tracking-normal font-sans text-4xl font-semibold leading-[1.3] text-gray-900 my-3"
        >
          My Blog Updates
        </h2><p
          class="block antialiased font-sans text-xl font-normal leading-relaxed text-gray-500"
        >
          A place to share ideas and insights from <br /> my work and experience.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        {
          posts.map((post) => (
            <article class="my-6">
              <h3 class="text-xl text-blue-800 underline">
                <a href={`/${getPostLink(post)}/`}>{post.data.title}</a>
              </h3>
              <p class="excerpt my-4">{post.data.excerpt}</p>
              <a
                class="rounded px-4 py-1 bg-blue-600 text-white
								hover:bg-blue-800 transition duration-300
								"
                href={`/${getPostLink(post)}/`}
              >
                Read More
              </a>
            </article>
          ))
        }
      </div>
    </section>
    <section class="my-10 px-5 container mx-auto">
      <Parallax />
    </section>
    <Footer />
  </body>
</html>
